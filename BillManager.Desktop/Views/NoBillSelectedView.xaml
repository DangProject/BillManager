<UserControl x:Class="BillManager.Desktop.Views.NoBillSelectedView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:cor="clr-namespace:Core.UI;assembly=Core"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             Background="{StaticResource DarkSlateBlue}"
             mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="300">

    <Grid TextElement.Foreground="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock Margin="16,0,0,0" 
                   Visibility="{Binding Bills, Converter={cor:CountToVisibilityConverter}}"
                   VerticalAlignment="Center"
                   FontSize="20" TextTrimming="CharacterEllipsis"
                   Text="No bill selected" />
    </Grid>
</UserControl>
